{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "make (debug)",
			"type": "shell",
			"command": "make debug",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "make and run (debug)",
			"type": "shell",
			"command": "make debug && ./out",
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}